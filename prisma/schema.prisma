generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model State{
  id          Int      @id @default(autoincrement())
  name        String
  state_img   String
  places      PlacesToVisit[]
  hiddenGems  HiddenGem[]
}

model PlacesToVisit{
  id          Int      @id @default(autoincrement())
  title        String
  description String
  img         String
  badge       String
  state       State    @relation(fields: [stateId], references: [id])
  stateId     Int
}

model HiddenGem{
  id         Int      @id @default(autoincrement())
  title        String
  brief_description String
  description String
  img         String
  state       State    @relation(fields: [stateId], references: [id])
  stateId     Int
}

