generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id  @default(autoincrement())
  username  String  @unique
  email     String  
  password  String
  role      Role    @default(USER)
}
model State{
  id          Int      @id @default(autoincrement())
  name        String   @unique
  state_img_url   String
  places      PlacesToVisit[]
  hiddenGems  HiddenGem[]
}

model PlacesToVisit{
  id          Int      @id @default(autoincrement())
  title        String
  desc         String
  img_url      String
  badge        String
  state        State    @relation(fields: [stateId], references: [id])
  stateId      Int
}

model HiddenGem{
  id         Int      @id @default(autoincrement())
  title        String
  brief_desc String
  desc String?
  img_url         String
  state       State    @relation(fields: [stateId], references: [id])
  stateId     Int
}

enum Role{
  USER
  ADMIN
}
